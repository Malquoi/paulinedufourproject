<div class= "page hidden-xs">
  <%= render 'shared/navbar/navbar_project' %>

  <div class="skeleton text-center">

    <div class="skeleton-left text-center">
      <div class="link-border-container">
        <div id="link-rotate-right">
          <%#= link_to "- home -", projects_path,  class:"link-border" %>
        </div>
      </div>
    </div>


    <div class="skeleton-middle text-center">
      <div class="project">

        <div class= 'projects-controls-row hidden-xs hidden-sm'>
          <div class= 'projects-controls-row-div'></div>
          <div class = 'projects-controls-row-div'>
            <%#= render 'shared/projects_controls' %>
          </div>
        </div>
        <div class= 'projects-controls-row hidden-xs  hidden-md hidden-lg'>
          <div class= 'projects-controls-row-div-sm'></div>
          <div class = 'projects-controls-row-div-sm'>
            <%#= render 'shared/projects_controls' %>
          </div>
        </div>


        <div class="project-presentation hidden-sm">
          <p class="project-project-name hidden-xs" ><%= @project.name%><span> </span><%=@project.name2%></p>
          <p class="project-project-presentation hidden-xs"><%= @project.presentation%></p>
          <p class="project-project-date"><%=@project.date%></p>
          <p class="project-project-commentary hidden-xs"><%= simple_format(@project.commentary, class: "project-project-commentary hidden-xs")%></p>
        </div>

        <div class="project-presentation-sm hidden-xs hidden-md hidden-lg">
          <p class="project-project-name hidden-xs" ><%= @project.name%><span> </span><%=@project.name2%></p>
          <p class="project-project-presentation hidden-xs"><%= @project.presentation%></p>
          <p class="project-project-date"><%=@project.date%></p>
          <p class="project-project-commentary-sm"><%= simple_format(@project.commentary, class: "project-project-commentary hidden-xs")%></p>
        </div>

        <div class="project-artworks-container hidden-xs hidden-sm">
          <div class="hidden-box hidden-xs"></div>
          <%#= render 'shared/project_artworks_container' %>
        </div>

        <div class="project-artworks-container-md hidden-xs hidden-sm hidden-lg">
          <div class="hidden-box hidden-xs"></div>
          <%#= render 'shared/project_artworks_container' %>
        </div>

        <div class="project-artworks-container-sm hidden-xs hidden-md hidden-lg">
          <div class="hidden-box hidden-xs"></div>
          <%#= render 'shared/project_artworks_container' %>
        </div>


      </div>
    </div>


    <div class="skeleton-right text-center">
      <div class="link-border-container">
        <div id="link-rotate-left"><%#= link_to "- news -", breakings_path, class:"link-border"%></div>
      </div>
    </div>

  </div>
</div>
